let b:autocomment = 0
function! ToggleAutoComment() abort
    if !b:autocomment
	setlocal formatoptions+=cro
	let b:autocomment = 1
    else
	setlocal formatoptions-=cro
	let b:autocomment = 0
    endif
endfunction



