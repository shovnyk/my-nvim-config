function! MakeHLine(...) range
    " Default comment and width
    let l:ch = (&commentstring)[0]
    let l:tw = &textwidth
    " Override defaults per given parameters
    if a:0
        let l:ch = a:1
        if a:0 == 2
            let l:tw = a:2
        endif
    endif
    " Do the actual work
    eval repeat(l:ch, l:tw)->append(line("."))
endfunction
command! -nargs=* Hline call MakeHLine(<f-args>)

